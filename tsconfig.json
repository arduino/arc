{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*.ts"],
  "compilerOptions": {
    "importHelpers": true,
    "lib": ["dom", "es2019", "es2020.string"],
    "downlevelIteration": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "types": ["node", "mocha"]
  }
}
